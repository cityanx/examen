@model DatosPaciente.Models.Paciente

@{
    ViewData["Title"] = "Editar Datos del Paciente";
}

<h2>Editar</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">

                <input type="hidden" asp-for="PacienteID" />
                <div class="form-group col-md-12">
                    <dt class="col-sm-12">
                        <label asp-for="PacienteName" class="control-label"></label>
                        <input asp-for="PacienteName" class="form-control" placeholder="Primer Nombre" />
                        <br />
                        <span asp-validation-for="PacienteName" class="text-danger"></span>


                        <input asp-for="SecondName" class="form-control" placeholder="Segundo Nombre" />
                        <br />
                        <span asp-validation-for="SecondName" class="text-danger"></span>



                        <input asp-for="ApellidoPaciente" class="form-control" placeholder="Apellido" />
                        <br />
                        <span asp-validation-for="ApellidoPaciente" class="text-danger"></span>

                        <label asp-for="CorreoPaciente" class="control-label"></label>
                        <input asp-for="CorreoPaciente" class="form-control" placeholder="Email" />
                        <br />
                        <span asp-validation-for="CorreoPaciente" class=""></span>

                        <label asp-for="AcompaName" class="control-label"></label>
                        <input asp-for="AcompaName" class="form-control" placeholder="Nombre" />
                        <br />
                        <span asp-validation-for="AcompaName" class=""></span>
                        <input asp-for="AcompaApellido" class="form-control" placeholder="Apellido" />
                        <br />
                        <span asp-validation-for="AcompaApellido" class=""></span>

                        <label asp-for="DireccionPrimera" class="control-label"></label>
                        <input asp-for="DireccionPrimera" class="form-control" placeholder="Línea 1" />
                        <br />
                        <span asp-validation-for="DireccionPrimera" class=""></span>

                        <input asp-for="DireccionSegunda" class="form-control" placeholder="Línea 2" />
                        <br />
                        <span asp-validation-for="DireccionSegunda" class=""></span>

                        <input asp-for="CiudadPaciente" class="form-control" placeholder="Ciudad" />
                        <br />
                        <span asp-validation-for="CiudadPaciente" class=""></span>

                        <input asp-for="EstadoPaciente" class="form-control" placeholder="Estado / Provincia" />
                        <br />
                        <span asp-validation-for="EstadoPaciente" class=""></span>

                        <input asp-for="PostalPaciente" class="form-control" placeholder="Código Postal" />
                        <br />
                        <span asp-validation-for="PostalPaciente" class=""></span>



                        <label asp-for="AreaTelefono" class="control-label"></label>
                        <input asp-for="AreaTelefono" class="form-control" placeholder="Area" />
                        <br />
                        <span asp-validation-for="AreaTelefono" class=""></span>

                        <input asp-for="NumeroTelefono" class="form-control" placeholder="Telefono" />
                        <br />
                        <span asp-validation-for="NumeroTelefono" class=""></span>


                        <label asp-for="AreaWhats" class="control-label"></label>
                        <input asp-for="AreaWhats" class="form-control" placeholder="Area" />
                        <br />
                        <span asp-validation-for="AreaWhats" class=""></span>

                        <input asp-for="NumeroWhats" class="form-control" placeholder="Telefono" />
                        <br />
                        <span asp-validation-for="NumeroWhats" class=""></span>


                    </dt>
                </div>



            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">Cancelar</a>
            </div>
        </form>
    </div>
</div>






@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}