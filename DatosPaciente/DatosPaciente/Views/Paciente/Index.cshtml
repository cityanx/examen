@model IEnumerable<DatosPaciente.Models.Paciente>

@{
    ViewData["Title"] = "Pacientes";
}

<h2>Pacientes</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Agregar</a>
</p>

<table class="table">
    <thead>
        <tr>

            <th>@Html.DisplayNameFor(model => model.PacienteName)</th>
            <th>@Html.DisplayNameFor(model => model.SecondName)</th>
            <th>@Html.DisplayNameFor(model => model.ApellidoPaciente)</th>
            <th>@Html.DisplayNameFor(model => model.CorreoPaciente)</th>
        
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.PacienteName)</td>
            <td>@Html.DisplayFor(modelItem => item.SecondName)</td>
            <td>@Html.DisplayFor(modelItem => item.ApellidoPaciente)</td>
            <td>@Html.DisplayFor(modelItem => item.CorreoPaciente)</td>
       
            
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.PacienteID">Actualizar</a>
                <a asp-action="Details" class="btn btn-success" asp-route-id="@item.PacienteID">Mostrar</a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.PacienteID">Eliminar</a>
            </td>
        </tr>
        }
    </tbody>
</table>